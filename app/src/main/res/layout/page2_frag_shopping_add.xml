<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayll"
    >
    <TextView
        android:id="@+id/titled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="상품 등록"
        android:paddingTop="16dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="@color/colorGrayll"
        android:gravity="center_horizontal"
        android:textColor="@color/colorPoint"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/titled"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="7dp"
            android:paddingRight="12dp"
            android:text="상품명"
            android:textColor="@color/colorGray"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/check_add_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:padding="0dp">

            <EditText
                android:clickable="true"
                android:id="@+id/check_add_goods_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:background="@drawable/textfield_layout"
                android:hint="상품명을 입력하세요"
                android:inputType="text"
                android:maxLength="500"
                android:paddingLeft="12dp"
                android:paddingTop="7dp"
                android:paddingRight="12dp"

                android:paddingBottom="7dp"
                android:textCursorDrawable="@drawable/cursor_layout"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="7dp"
            android:paddingRight="12dp"
            android:text="단가 / 수량"
            android:textColor="@color/colorGray"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/check_add_etc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:padding="0dp">

            <EditText
                android:clickable="true"
                android:id="@+id/check_add_price_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:background="@drawable/textfield_layout"
                android:hint="단가를 입력하세요"
                android:inputType="number"
                android:paddingLeft="12dp"
                android:paddingTop="7dp"
                android:paddingRight="12dp"
                android:paddingBottom="7dp"
                android:textCursorDrawable="@drawable/cursor_layout"
                android:textSize="16sp" />

            <EditText
                android:clickable="true"
                android:id="@+id/check_add_amount_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="0.5"
                android:background="@drawable/textfield_layout"
                android:hint="수량"
                android:inputType="number"
                android:paddingLeft="12dp"
                android:paddingTop="7dp"
                android:paddingRight="12dp"
                android:paddingBottom="7dp"
                android:textCursorDrawable="@drawable/cursor_layout"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="7dp"
            android:paddingRight="12dp"
            android:text="총 금액"
            android:textColor="@color/colorGray"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/check_add_sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:id="@+id/check_add_sum_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:background="@drawable/textfield_layout"
                android:paddingLeft="12dp"
                android:paddingTop="7dp"
                android:paddingRight="12dp"
                android:paddingBottom="7dp"
                android:textCursorDrawable="@drawable/cursor_layout"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"

        >
        <Button
            android:id="@+id/check_add_btn_send"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_str"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="0.5dp"
            android:text="등록" />
        <Button
            android:id="@+id/check_add_btn_back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="0.5dp"
            android:layout_marginTop="20dp"

            android:background="@drawable/btn_str"
            android:text="취소" />

    </LinearLayout>
</RelativeLayout>