<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayll"
    android:theme="@style/AppTheme.FragLayout"
    android:padding="0dp"
   >
    <TextView
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/colorPoint"
        android:textStyle="bold"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:text="시간과 돈을 절약하고 싶다면?\n 한눈에 확인 할 수 있는 \n간편 쇼핑 리스트를 만들어봐요!" />
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="36dp"
        android:id="@+id/check_addList_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:padding="0dp"
        android:background="@color/colorGrayll"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">
    </android.support.v7.widget.RecyclerView>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/colorAlpa"
        android:padding="0dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/sum_layout"
            android:padding="0dp"
            >

            <TextView
                android:id="@+id/sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPoint"
                android:text="0 / 0"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:padding="0dp"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/tv_totalSum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPoint"
                android:text="￦ 0"
                android:textStyle="bold"
                android:padding="0dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/action_addbg"
        android:clickable="true"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/bg_add"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">
        <ImageView
            android:id="@+id/action_addbtn"
            android:background="@color/colorAlpa"
            android:clickable="true"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/btn_add"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
