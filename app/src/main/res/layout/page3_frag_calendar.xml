<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayll"
    android:theme="@style/AppTheme.FragLayout"
    android:padding="0dp"
    >
    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/calendarView"
        android:layout_marginTop="36dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mcv_selectionColor="@color/colorGray"
        app:mcv_showOtherDates="defaults" />
    <RelativeLayout
        android:id="@+id/action_addbg"
        android:clickable="true"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/bg_add"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">
        <ImageView
            android:id="@+id/action_addbtn"
            android:background="@color/colorAlpa"
            android:clickable="true"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/btn_add"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

</RelativeLayout>