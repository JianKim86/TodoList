<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="alertDialogStyle">@style/MyCustomDialogStyle</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPoint</item>
        <item name="colorAccent">@color/colorPoint</item>
        <item name="alertDialogStyle">@style/MyCustomDialogStyle</item>

    </style>
    <style name="AppTheme.Applayout">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="titleTextColor">@color/colorWhite</item>
        <item name="subtitleTextColor">@color/colorligntBlue</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>
    <style name="AppTheme.Tablayout">
        <!-- Customize your theme here. -->
        <item name="tabTextColor">@color/colorGray</item>
        <item name="tabSelectedTextColor">@color/colorPoint</item>
        <item name="selectableItemBackground">@color/colorGray</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="titleTextColor">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorPoint</item>

    </style>
    <style name="AppTheme.FragLayout">
        <item name="android:padding">8dp</item>
    </style>
    <style name="MyCustomDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorDeepBlue</item>
    </style>
</resources>
